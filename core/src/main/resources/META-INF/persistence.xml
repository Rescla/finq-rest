<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.1"
             xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
    <persistence-unit name="finqPU">
        <jta-data-source>java:/jdbc/finq</jta-data-source>
        <class>nl.finan.finq.entities.Story</class>
        <class>nl.finan.finq.entities.Scenario</class>
        <class>nl.finan.finq.entities.Bundle</class>
        <class>nl.finan.finq.entities.Collection</class>
        <exclude-unlisted-classes>false</exclude-unlisted-classes>

        <properties>
            <property name="hibernate.hbm2ddl.auto" value="update"/>
        </properties>

    </persistence-unit>
</persistence>
